



@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row lr-header">
    <div class="col-12 text-center">
        <h3>Reset Password</h3>
        <p class="details"><small>A password reset link will be sent to your email address</small></p>
    </div>
</div>

<div class="row">
    <div class="col-12 col-sm-10 offset-sm-1 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <form asp-action="ForgotPassword" asp-controller="Home" method="post">
            <div class="form-group">
                <label>Email:</label>&nbsp<span class="error-message">@ViewBag.PWResetError</span>
                <input type="text" name="Email" class="form-control" />
            </div>
            <div class="form-group text-right">
                <button class="btn btn-primary">Reset my password</button>
            </div>
        </form>
    </div>
</div>
