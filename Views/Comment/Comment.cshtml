@{
    ViewData["Title"] = "Comment";
}

@model Comment
@{ string UpdateUrl = $"/comment/{@Model.CommentId}/update"; }

<div class="row">
    <div class="col-12 text-center">
        <h1>Read / Update / Delete a Comment</h1>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <p>Id: @Model.CommentId</p>
        <p>Content: @Model.Content</p>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-10 offset-md-1">
        <form asp-action="DeleteComment" asp-route-commentId=@Model.CommentId asp-controller="Comment" method="post">
            <input type="hidden" name="Delete" />
            <div class="form-group text-center"> 
                <a href=@UpdateUrl class="btn btn-info">Edit this Comment</a>
                <button class="btn btn-danger">Delete this Comment</button>
            </div>
        </form>
    </div>
</div>


